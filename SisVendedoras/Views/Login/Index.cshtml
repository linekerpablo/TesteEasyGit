<body class="hold-transition login-page" ng-app="app" ng-controller="AutenticacaoController">
    <div class="login-box">
        <div class="login-logo">
            <b>Andrea</b>Modas
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Faça o login</p>
            <form name="frmLogin" method="post">
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="E-mail" name="email" ng-model="email" ng-pattern="@Utilidades.RegexEmail" ng-required="true">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span class="error" ng-show="(frmLogin.email.$dirty || submitted)  && frmLogin.email.$error.required && !frmLogin.$valid">E-mail é obrigatório</span><br/>
                    <span class="error" ng-show="(frmLogin.email.$dirty || submitted)  && frmLogin.email.$error.pattern && !frmLogin.$valid">E-mail é inválido</span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Senha" name="senha" ng-model="senha" ng-required="true">
                    <span class="fa fa-lock form-control-feedback"></span>
                    <span class="error" ng-show="(frmLogin.senha.$dirty || submitted)  && frmLogin.senha.$error.required && !frmLogin.$valid">Senha é obrigatória</span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" ng-click="login()">Fazer login</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
